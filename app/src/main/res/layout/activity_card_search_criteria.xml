<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.max_baker.magicdb.CardSearchCriteria">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Card Name:"
            android:textSize="20dp"
            android:gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/cardNameSearch"
            android:hint="Name"
            android:textSize="20dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Color:"
        android:textSize="20dp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="W:"
            android:textSize="20dp"
            android:gravity="center"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="U:"
            android:textSize="20dp"
            android:gravity="center"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/blue"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="B:"
            android:textSize="20dp"
            android:gravity="center"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="R:"
            android:textSize="20dp"
            android:gravity="center"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/red"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="G:"
            android:textSize="20dp"
            android:gravity="center"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/green"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Cost:"
        android:textSize="20dp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="from"
            android:textSize="20dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/minCost"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:inputType="number"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="to"
            android:textSize="20dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/maxCost"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="15"
            android:inputType="number"
            android:textSize="20dp" />
    </LinearLayout>
    <Button
        android:id="@+id/goSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goSearch"
        android:text="Search" />

</LinearLayout>
</ScrollView>
